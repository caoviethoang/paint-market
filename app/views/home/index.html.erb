<section id="example-taxonomies" class="py-12 px-6 bg-white border-b-2 border-gray-300">
  <% if @example_taxonomies.present? %>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @example_taxonomies.each do |taxonomy_data| %>
          <div class="flex flex-col">

            <!-- Single product image -->
            <div class="mb-6">
              <div class="aspect-square overflow-hidden rounded-lg shadow-md">
                <%= image_tag taxonomy_data[:image].url(:small),
                    class: 'w-full h-full object-cover hover:scale-110 transition-transform duration-300',
                    alt: "#{taxonomy_data[:product].name} Image" %>
              </div>
            </div>

            <div class="mb-6">
              <h3 class="text-h4 font-semibold text-gray-900 mb-3">
                <%= taxonomy_data[:taxonomy].name %>
              </h3>
              <% if taxonomy_data[:taxonomy].description.present? %>
                <p class="text-sm text-gray-500 max-w-sm mx-auto">
                  <%= truncate(taxonomy_data[:taxonomy].description, length: 120) %>
                </p>
              <% end %>
            </div>

            <!-- Shop button -->
            <% if taxonomy_data[:taxonomy].root.present? %>
              <%= link_to products_path(taxon: taxonomy_data[:taxonomy].root.id),
                  class: "mt-4 px-6 py-3 text-center border-2 border-gray-400 text-sm font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-200" do %>
                Shop <%= taxonomy_data[:taxonomy].name %>
              <% end %>
            <% else %>
              <a href="#" class="mt-4 px-6 py-3 text-center border-2 border-gray-400 text-sm font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                Shop <%= taxonomy_data[:taxonomy].name %>
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>


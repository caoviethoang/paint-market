<section class="banner relative flex w-full">
  <div class="inset-0">
    <%= image_tag "banner.png", class: "w-full object-cover" %>
  </div>

  <div class="bg-[#F5F3F0] absolute z-10 flex items-center w-1_col-3 left-8 bottom-8">
    <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-12">
      <div class="max-w-lg">
        <h1 class="text-h2.5 md:text-5xl lg:text-6xl font-serif text-black leading-tight mb-6">
          Good art changes lives
        </h1>

        <p class="text-base md:text-lg text-black leading-relaxed mb-8 max-w-md">
          Bring home your new art to view it in person. If a piece doesn't quite work in your space, return it within seven days of receiving your order and receive a full refund.*
        </p>

        <%= link_to products_path, class: "border-b-2 hover:text-white inline-block py-3 text-black tracking-wide underline" do %>
          GO TO COLLECTION
        <% end %>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 flex right-[3px] space-x-2">
    <button class="w-10 h-10 bg-white bg-opacity-90 hover:bg-opacity-100 transition-all duration-300 flex items-center justify-center border border-black">
      <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button class="w-10 h-10 bg-white bg-opacity-90 hover:bg-opacity-100 transition-all duration-300 flex items-center justify-center border border-black">
      <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</section>

<section class="taxonomies-menu py-8 pt-7 bg-white">
  <div class="mx-auto">
    <div class="flex flex-wrap justify-center gap-4" id="taxonomies-container">
      <% if @taxonomies.present? %>
        <% @taxonomies.first(7).each_with_index do |taxonomy, index| %>
          <% if taxonomy.root.present? %>
            <%= link_to products_path(taxon: taxonomy.root.id),
                class: "px-6 py-3 border border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-all duration-300 text-sm font-medium tracking-wide uppercase whitespace-nowrap",
                data: { taxonomy_id: taxonomy.id } do %>
              <%= taxonomy.name.upcase %>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <!-- Fallback buttons if no taxonomies -->
        <button class="px-6 py-3 border border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-all duration-300 text-sm font-medium tracking-wide uppercase">
          PAINTINGS
        </button>
        <button class="px-6 py-3 border border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-all duration-300 text-sm font-medium tracking-wide uppercase">
          ABSTRACT ART
        </button>
        <button class="px-6 py-3 border border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-all duration-300 text-sm font-medium tracking-wide uppercase">
          OIL PAINTINGS
        </button>
      <% end %>
    </div>
  </div>
</section>

